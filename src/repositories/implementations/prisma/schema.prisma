generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

enum TaskStatus {
    pending
    in_progress
    completed
}

model Task {
    id          Int        @id @default(autoincrement())
    title       String
    description String?
    status      TaskStatus @default(pending) // Valores poss√≠veis: pending, in_progress, completed
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
}
